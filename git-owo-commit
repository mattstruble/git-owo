#!/bin/bash
# Copyright (c) 2018 Matt Struble

usage() {
	echo "usage: git owo commit [options]"
	echo
}

cmd_commit() {
	# Ensure that options were passed in
	if [ "$#" -lt 1 ]; then 
		usage; exit 1
	fi

	# Include owoer functionality	
	. "./git-owo-owoer"

	str=""
	isM=0
	for var in "$@"
	do
		if [ $isM -eq 1 ]; then 
			var="$(owoText "$var")"
			isM=0
		fi

		if [ "$var" = "-m" ]; then
			isM=1
		fi
		str="$str$var "
	done

	opt=("$str")
	git commit "${opt[@]}"	
}
